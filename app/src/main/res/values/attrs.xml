<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--菜单布局-->
    <declare-styleable name="MenuItemLayout">
        <!--菜单左侧文字-->
        <attr name="title_text" format="string" />
        <!--菜单左侧文字大小-->
        <attr name="title_text_size" format="dimension|reference" />
        <attr name="title_text_color" format="color|reference" />
        <!--菜单左侧自定义字体
        需要使用字体的全名称(带后缀，比如aa.ttf)
         字体文件需放在assets文件夹下-->
        <attr name="title_text_type" format="string" />
        <!--菜单右侧文字-->
        <attr name="hint_text" format="string" />
        <!--菜单右侧文字大小-->
        <attr name="hint_text_size" format="dimension|reference" />
        <!--菜单右侧文字颜色-->
        <attr name="hint_text_color" format="color|reference" />
        <!--菜单右侧自定义字体
        需要使用字体的全名称(带后缀，比如aa.ttf)
            字体文件需放在assets文件夹下-->
        <attr name="hint_text_type" format="string" />
        <!--菜单左侧图标-->
        <attr name="icon_reference" format="reference" />
        <attr name="icon_uri" format="string" />
        <!--菜单上方分割线样式
        1：细线  2：粗线-->
        <attr name="divider_line_style" format="integer" />
        <!--底部分割线颜色-->
        <attr name="bottom_line_color" format="color|reference" />
        <!--是否显示底部分割线-->
        <attr name="bottom_line_show" format="boolean" />

    </declare-styleable>


    <!--自定义文字前缀字符串-->
    <declare-styleable name="RequiredTextView">
        <attr name="android:text" />
        <!--文字的前缀，只支持字符串(默认是*)-->
        <attr name="prefix" format="string|reference" />
        <!--前缀文字的颜色，默认是红色-->
        <attr name="prefix_color" format="color|reference" />
        <!--内容自定义字体，需要使用字体的全名称(带后缀，比如aa.ttf)
            字体文件需放在assets文件夹下-->
        <attr name="type_face" format="string" />
    </declare-styleable>

    <declare-styleable name="IndexBar">
        <attr name="indexTextSize" format="dimension" />
        <attr name="indexTextColor" format="color" />
    </declare-styleable>
</resources>